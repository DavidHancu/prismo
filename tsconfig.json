{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2022",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "paths": {
            "~*": ["./src/*"]
        },
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "tsc-alias": {
        "verbose": false,
        "resolveFullPaths": true,
    }
} 